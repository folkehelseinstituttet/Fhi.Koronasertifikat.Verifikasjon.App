                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationId="{Binding Strings[ACCEPT_TERMS_HEADER_SEVEN_ACCESSIBILITY_TEXT]}"
                        Text="{Binding Strings[ACCEPT_TERMS_HEADER_SEVEN]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="21"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_SEVEN_SECTION_ONE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="22"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_SEVEN_SECTION_TWO]}" />

                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="23"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentTitleStyle}"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationId="{Binding Strings[ACCEPT_TERMS_HEADER_EIGHT_ACCESSIBILITY_TEXT]}"
                        Text="{Binding Strings[ACCEPT_TERMS_HEADER_EIGHT]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="24"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_EIGHT_SECTION_ONE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="25"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_EIGHT_SECTION_TWO]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="26"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_EIGHT_SECTION_THREE]}" />

                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="27"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentTitleStyle}"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationId="{Binding Strings[ACCEPT_TERMS_HEADER_NINE_ACCESSIBILITY_TEXT]}"
                        Text="{Binding Strings[ACCEPT_TERMS_HEADER_NINE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="28"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_NINE_SECTION_ONE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="29"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_NINE_SECTION_TWO]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="30"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_NINE_SECTION_THREE]}" />
                    <StackLayout
                        Grid.Row="31"
                        HorizontalOptions="Center"
                        Orientation="Horizontal">
                        <Label Text="{Binding AcceptTermsLabelText}" VerticalTextAlignment="Center" VerticalOptions="Center" Style="{StaticResource RegularLabelBoldStyle}"/>
                        <Switch IsToggled="{Binding TermsAccepted, Mode=TwoWay}"  />
                    </StackLayout>
                    <StackLayout
                        Grid.Row="32"
                        Margin="20, 0, 20, 0">
                        <Button
                            Text="{Binding Strings[CONFIRM_BUTTON]}"
                            Command="{Binding NextButtonCommand}"
                            IsEnabled="{Binding TermsAccepted}"
                            Style="{StaticResource CombinedButtonPrimaryStyle}"/>
                    </StackLayout>
                </Grid>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
