<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    x:Class="FHICORC.Views.AcceptTermsPage"
    NavigationPage.HasNavigationBar="False"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{StaticResource DefaultBackgroundColor}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ImageButton
                Grid.Row="0"
                Padding="15,15,0,0"
                HeightRequest="50"
                Command="{Binding BackCommand}"
                AutomationProperties.Name="{Binding Strings[BACK_BUTTON]}"
                Source="{StaticResource ArrowBack}"
                BackgroundColor="Transparent"
                HorizontalOptions="Start"
                VerticalOptions="Center" />
            <ScrollView Grid.Row="1">
                <Grid RowSpacing="20" Padding="0, 0, 0, 20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>
                    <Label
                        Margin="20, 10, 20, 0"
                        Grid.Row="0"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentTitleStyle}"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationId="{Binding Strings[ACCEPT_TERMS_HEADER_ONE_ACCESSIBILITY_TEXT]}"
                        Text="{Binding Strings[ACCEPT_TERMS_HEADER_ONE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="1"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_ONE_SECTION_ONE]}" />

                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="2"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentTitleStyle}"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationId="{Binding Strings[ACCEPT_TERMS_HEADER_TWO_ACCESSIBILITY_TEXT]}"
                        Text="{Binding Strings[ACCEPT_TERMS_HEADER_TWO]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="3"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_TWO_SECTION_ONE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="4"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_TWO_SECTION_TWO]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="5"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_TWO_SECTION_THREE]}" />

                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="6"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentTitleStyle}"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationId="{Binding Strings[ACCEPT_TERMS_HEADER_THREE_ACCESSIBILITY_TEXT]}"
                        Text="{Binding Strings[ACCEPT_TERMS_HEADER_THREE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="7"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_THREE_SECTION_ONE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="8"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_THREE_SECTION_TWO]}" />

                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="9"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentTitleStyle}"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationId="{Binding Strings[ACCEPT_TERMS_HEADER_FOUR_ACCESSIBILITY_TEXT]}"
                        Text="{Binding Strings[ACCEPT_TERMS_HEADER_FOUR]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="10"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_FOUR_SECTION_ONE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="11"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_FOUR_SECTION_TWO]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="12"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_FOUR_SECTION_THREE]}" />

                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="13"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentTitleStyle}"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationId="{Binding Strings[ACCEPT_TERMS_HEADER_FIVE_ACCESSIBILITY_TEXT]}"
                        Text="{Binding Strings[ACCEPT_TERMS_HEADER_FIVE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="14"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_FIVE_SECTION_ONE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="15"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_FIVE_SECTION_TWO]}" />

                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="16"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentTitleStyle}"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationId="{Binding Strings[ACCEPT_TERMS_HEADER_SIX_ACCESSIBILITY_TEXT]}"
                        Text="{Binding Strings[ACCEPT_TERMS_HEADER_SIX]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="17"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_SIX_SECTION_ONE]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="18"
                        TextColor="{StaticResource FHIPrimaryBlue}"
                        Style="{StaticResource ContentStyle}"
                        Text="{Binding Strings[ACCEPT_TERMS_PARAGRAPH_SIX_SECTION_TWO]}" />
                    <Label
                        Margin="20, 0, 20, 0"
                        Grid.Row="19"
