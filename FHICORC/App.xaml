            </Style>

            <Style x:Key="ContentStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="PTSansRegular" />
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="TextColor" Value="{StaticResource FHIPrimaryBlue}" />
